<?xml version="1.0" encoding="utf-8"?>

<!-- Layout for weather forecast list item for future day (not today) -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_frame"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/widget_padding_horizontal"
        android:paddingStart="@dimen/widget_padding_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/widget_padding_horizontal"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/widget_home_icon"
                android:layout_width="@dimen/widget_icon"
                android:layout_height="@dimen/widget_icon"
                android:layout_gravity="center"
                tools:src="@drawable/chelsea" />

            <TextView
                android:id="@+id/widget_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_main_text_size"
                tools:text="CHE" />

        </LinearLayout>

        <TextView
            android:id="@+id/widget_home_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/widget_main_text_size"
            tools:text="0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_inview_horizontal"
            android:layout_marginStart="@dimen/widget_inview_horizontal"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:text="-"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_main_text_size" />

            <TextView
                android:id="@+id/widget_match_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_main_text_size"
                tools:text="17:00" />
        </LinearLayout>

        <TextView
            android:id="@+id/widget_away_goals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/widget_main_text_size"
            tools:text="0" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/widget_padding_horizontal"
            android:layout_marginRight="@dimen/widget_padding_horizontal"
            android:layout_weight="1.5"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/widget_away_icon"
                android:layout_width="@dimen/widget_icon"
                android:layout_height="@dimen/widget_icon"
                android:layout_gravity="center"
                tools:src="@drawable/liverpool" />

            <TextView
                android:id="@+id/widget_away_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textColor="@color/primary_text"
                android:textSize="@dimen/widget_main_text_size"
                tools:text="LIV" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>